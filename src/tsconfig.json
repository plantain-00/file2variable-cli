{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "sourceMap": false,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "importHelpers": true,
        "jsx": "react",
        "outDir": "../dist",
        "declaration": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es2015.promise",
            "es5",
            "dom"
        ]
    }
}